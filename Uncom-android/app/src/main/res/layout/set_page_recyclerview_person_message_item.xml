<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:id="@+id/circleImageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.Elk"
        android:textSize="17dp"
        app:layout_constraintLeft_toRightOf="@+id/circleImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorFontColor"
        android:id="@+id/person_username"
        android:layout_marginStart="10dp" />
    
    
    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorSmallFont"
        android:textSize="10dp"
        android:text="今天好像下雨了。"
        app:layout_constraintLeft_toRightOf="@+id/circleImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/person_username"
        android:id="@+id/person_last_message"
        android:layout_marginStart="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刚刚"
        android:textColor="@color/colorSmallFont"
        android:textSize="9dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/unlook_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape_circular_view"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />



</android.support.constraint.ConstraintLayout>

