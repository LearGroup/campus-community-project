<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.chen1.uncom.FindPageMainFragment">



    <android.support.v7.widget.CardView
        android:foreground = "?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uncom Team"
                    android:textColor="@color/colorIcon"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent" />


                <TextView
                    android:background="@drawable/active_textview_border"
                    android:textSize="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMain"
                    android:text="线上"
                    android:id="@+id/textView12"
                    app:layout_constraintLeft_toRightOf="@+id/textView9"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:background="@drawable/active_textview_border"
                    android:textSize="8dp"
                    android:id="@+id/textView6"
                    android:textColor="@color/colorMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="线下"
                    app:layout_constraintLeft_toRightOf="@+id/textView12"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:drawablePadding="3dp"
                    android:paddingBottom="3dp"
                    android:text="一个软件开发小组"
                    android:textColor="@color/colorFontColor2"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    android:id="@+id/textView13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76"
                    android:textColor="@color/colorMain"
                    android:textSize="40dp"
                    android:id="@+id/textView11"
                    app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="6dp"
                    android:layout_marginRight="18dp"
                    app:layout_constraintRight_toRightOf="parent" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.11.1 — ~"
                    android:textSize="8dp"
                    android:paddingTop="47dp"
                    android:layout_marginRight="18dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView11" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_vector_type_icon"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:textSize="10dp"
                    android:padding="2dp"
                    android:background="@color/colorMain"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:text="软件开发"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/appCompatImageView7"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:textSize="10dp"
                    android:padding="2dp"
                    android:background="#029ED9"
                    android:textColor="@color/colorPrimary"

                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:text="技术学习"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/textView7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:textSize="10dp"
                    android:padding="2dp"
                    android:background="#1DB0B8"
                    android:textColor="@color/colorPrimary"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:text="极客精神"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/textView8"
                    app:layout_constraintTop_toTopOf="parent" />

                   </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    app:srcCompat="@drawable/ic_vector_addr_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="1dp"
                    android:text="上院 华府苑 2号楼501"
                    app:layout_constraintRight_toLeftOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="parent" />

              <LinearLayout
                  android:paddingRight="8dp"
                  android:layout_width="match_parent"
                  android:gravity="right"
                  android:layout_height="wrap_content">

                  <android.support.v7.widget.AppCompatImageView
                      android:id="@+id/more_activity_info"
                      android:layout_width="37dp"
                      android:layout_height="17dp"
                      app:srcCompat="@drawable/ic_vector_more_icon" />
              </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:visibility="gone"
                android:id="@+id/find_activity_extend_linearlayout"
                android:orientation="vertical"
                android:paddingRight="4dp"
                android:paddingLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
