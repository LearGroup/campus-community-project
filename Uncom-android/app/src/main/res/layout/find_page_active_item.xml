<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minHeight="142dp"
    android:background="#0a000000"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginBottom="15dp"
        android:id="@+id/active_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp">
        <ImageView

            android:scaleType="centerCrop"
            android:minHeight="140dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@mipmap/concept_img"/>

        <LinearLayout
            android:background="#bFFFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">

                <LinearLayout
                    android:paddingTop="8dp"
                    android:id="@+id/head_linear"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView

                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8dp"
                        android:text="Uncom Project "
                        android:textColor="#FF333333"
                        android:textSize="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-2dp"
                        android:background="@drawable/active_textview_border"
                        android:text="线上"
                        android:textColor="@color/colorMain"
                        android:textSize="8dp"
                        app:layout_constraintLeft_toRightOf="@+id/textView9"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="-2dp"
                        android:background="@drawable/active_textview_border"
                        android:text="线下"
                        android:textColor="@color/colorMain"
                        android:textSize="8dp"
                        app:layout_constraintLeft_toRightOf="@+id/textView12"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:autoLink="all"
                    android:drawablePadding="3dp"
                    android:paddingBottom="10dp"
                    android:text="一个开发项目"
                    android:textColor="#FF444444"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="30dp"
                    android:text="32"
                    android:textColor="@color/colorIcon"
                    android:textSize="40dp"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:paddingTop="45dp"
                    android:visibility="gone"
                    android:text="7.16"
                    android:textSize="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView11" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView7"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                    app:srcCompat="@drawable/ic_vector_type_icon" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:padding="2dp"
                    android:text="AI"
                    android:textColor="@color/colorMain"
                    android:textSize="13dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/appCompatImageView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView13"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:padding="2dp"
                    android:text="软件开发"
                    android:textColor="@color/colorMain"
                    android:textSize="13dp"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toTopOf="@+id/textView7" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:padding="2dp"
                    android:text="计算科学"
                    android:textColor="@color/colorMain"
                    android:textSize="13dp"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />


                <LinearLayout
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/head_linear">

                    <TextView

                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:background="#199475"
                        app:layout_constraintBottom_toTopOf="@+id/textView13"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/head_linear" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:background="#00000000"
                        app:layout_constraintBottom_toTopOf="@+id/textView13"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/head_linear" />

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="4dp"
                    app:srcCompat="@drawable/ic_vector_addr_icon" />

                <TextView
                    android:id="@+id/page_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="0dp"
                    android:text="内蒙古工业大学  "
                    android:textColor="#FF444444"
                    app:layout_constraintRight_toLeftOf="@+id/textView6"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/open_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="8dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/more_activity_info"
                        android:layout_width="37dp"
                        android:layout_height="17dp"
                        app:srcCompat="@drawable/ic_vector_more_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/find_activity_extend_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:visibility="gone">
                <TextView
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorEditTextNormal"/>
                <android.support.design.widget.TabLayout
                    app:tabMode="fixed"
                    app:tabTextColor="#ff444444"
                    app:tabSelectedTextColor="@color/colorMain"
                    app:tabIndicatorHeight="0dp"
                    android:id="@+id/extend_tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </android.support.design.widget.TabLayout>
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/viewpagers">
                </android.support.v4.view.ViewPager>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>