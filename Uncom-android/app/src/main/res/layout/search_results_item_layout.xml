<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:elevation="0dp"
        android:layout_width="35dp"
        android:src="@mipmap/zhiwu"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_vector_search_new_relationship"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/appCompatImageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索:"
        android:id="@+id/person_username"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/appCompatImageView"
        android:layout_marginLeft="8dp" />


    <TextView
        android:id="@+id/short_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好，我是陈广平，交个朋友吧。"
        android:textSize="10dp"
        android:textColor="@color/colorFontColor"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/person_username"
        app:layout_constraintLeft_toRightOf="@+id/appCompatImageView"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>



