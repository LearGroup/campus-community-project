<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chen1.uncom">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.CoreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/catsicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/catsicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".access.AccessActivity"
            android:theme="@style/AppTheme"
            android:label="ThinkIn"
            android:windowSoftInputMode="stateVisible|adjustResize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:name=".main.MainActivity"
            android:label="@string/app_name"></activity
          >
        <service android:name=".service.CoreService"/>
    </application>

</manifest>