<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.chen1.uncom.me.TabPagerForMain">


    <LinearLayout
        android:layout_marginBottom="25dp"
        android:layout_marginTop="18dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="签名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontColor"
            android:textAlignment="center"
            android:text="逝者已矣，来者可追。"/>
        <android.support.v7.widget.AppCompatImageView
            android:layout_marginLeft="18dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_vector_edit_icon"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
           android:text="专业"
           android:layout_marginTop="3dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="3dp"
            android:textColor="@color/colorFontColor"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软件工程"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/ic_vector_interest_tag_icon"/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兴趣"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="25dp"
        android:paddingTop="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="20dp"
                android:text="AI"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="10dp"
                android:visibility="visible" />
            <TextView
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="20dp"
                android:text="计算机"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="10dp"
                android:visibility="visible" />
            <TextView
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="20dp"
                android:text="读书"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="10dp"
                android:visibility="visible" />
            <TextView
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="20dp"
                android:text="足球"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="10dp"
                android:visibility="visible" />
            <TextView
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="20dp"
                android:text="动画制作"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:textSize="10dp"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.CardView
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorFontColor"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:textSize="18dp"/>

            <android.support.v7.widget.RecyclerView
                android:minHeight="80dp"
                android:layoutAnimation="@anim/layout_anim_fall_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorFontColor"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与活动"
                android:textSize="18dp"/>
            <android.support.v7.widget.RecyclerView
                android:minHeight="80dp"
                android:layoutAnimation="@anim/layout_anim_fall_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardElevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精选相册"
                android:textSize="18dp"
                android:textColor="@color/colorFontColor"/>
            <android.support.v7.widget.RecyclerView
                android:minHeight="80dp"
                android:layoutAnimation="@anim/layout_anim_fall_up"
                android:id="@+id/thinker_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v7.widget.CardView>






</LinearLayout>
