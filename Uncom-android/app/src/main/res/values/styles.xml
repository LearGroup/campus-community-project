<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppStartLoad" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/main_back</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorMain</item>
        <item name="android:textColorHint">@color/colorFontColor</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorMain</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorMain</item>
        <item name="android:textColorHint">@color/colorFontColor</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>


    <style name="Theme.ToolBar.Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionOverflowButtonStyle">@style/ActionButtom.Overflow.Custom</item>
    </style>

    <style name="ActionButtom.Overflow.Custom" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChatEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorEditTextNormal</item>
        <item name="colorControlActivated">@color/colorEditTextActivated</item>
    </style>

    <!--设置popupwindow的弹出消失动画-->
    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/access_popupwindow_translate_from</item>
        <item name="android:windowExitAnimation">@anim/access_popupwindow_translate_to</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorIcon</item>
        <item name="colorButtonNormal">@color/colorIcon</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <!--设置协调布局中的title字体大小-->
    <style name="expendText" parent="TextAppearance.AppCompat.Title">
        <!-- Customize your theme here. -->
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/colorTransParentFont</item>
    </style>

    <style name="collapse" parent="TextAppearance.AppCompat.Title">
        <!-- Customize your theme here. -->
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/colorFontColor</item>
    </style>

</resources>
