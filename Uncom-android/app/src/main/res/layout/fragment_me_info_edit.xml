<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.example.chen1.uncom.me.MeInfoEdit">
    <android.support.design.widget.AppBarLayout

        android:background="#ffffff"
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <android.support.v7.widget.Toolbar
            android:background="#ffffff"
            android:paddingTop="30dp"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <android.support.v7.widget.AppCompatImageView
                android:layout_marginTop="9dp"
                android:layout_width="18dp"
                android:id="@+id/back"
                android:layout_height="18dp"
                android:clickable="true"
                tools:ignore="DuplicateIds"
                app:srcCompat="@drawable/ic_cancle" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/colorFontColor"
                android:text="个人资料编辑"
                android:layout_marginLeft="30dp"/>
            <android.support.v7.widget.AppCompatImageView
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:id="@+id/save"
                android:layout_marginRight="15dp"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:clickable="true"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ic_selected_black"
                tools:targetApi="lollipop" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/display_image"/>

                <ImageView
                    android:id="@+id/head_img"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/zhiwu"/>
            </FrameLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/display_info"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_vector_person_relation_icon"/>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorFontColor2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <AutoCompleteTextView
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionNext"
                        android:paddingTop="10dp"
                        android:background="@null"
                        android:shadowColor="@color/colorFontColor"
                        android:textColorHint="@color/colorFontColor2"
                        android:textColor="@color/colorFontColor2"
                        android:textColorLink="@color/colorFontColor"
                        android:textColorHighlight="@color/colorFontColor2"
                        android:id="@+id/username"
                        android:textCursorDrawable="@drawable/access_cursor_active"
                        android:drawableBottom="@drawable/access_edittext_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="10dp"
                        android:hint="用户名"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:layout_editor_absoluteY="153dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView

                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_gender"/>

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/boy"
                        android:text="男"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/girl"
                        android:layout_marginLeft="8dp"
                        android:text="女"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_write"/>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorFontColor2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textInputLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <AutoCompleteTextView
                        android:paddingTop="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:shadowColor="@color/colorFontColor"
                        android:textColorHint="@color/colorFontColor2"
                        android:textColor="@color/colorFontColor2"
                        android:textColorLink="@color/colorFontColor"
                        android:textColorHighlight="@color/colorFontColor2"
                        android:id="@+id/write"
                        android:textCursorDrawable="@drawable/access_cursor_active"
                        android:drawableBottom="@drawable/access_edittext_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="10dp"
                        android:hint="签名"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:layout_editor_absoluteY="153dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_vector_addr_icon"/>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorFontColor2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textInputLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <AutoCompleteTextView
                        android:paddingTop="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:shadowColor="@color/colorFontColor"
                        android:textColorHint="@color/colorFontColor2"
                        android:textColor="@color/colorFontColor2"
                        android:textColorLink="@color/colorFontColor"
                        android:textColorHighlight="@color/colorFontColor2"
                        android:id="@+id/addr"
                        android:textCursorDrawable="@drawable/access_cursor_active"
                        android:drawableBottom="@drawable/access_edittext_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="10dp"
                        android:hint="所在城市"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:layout_editor_absoluteY="153dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_vector_email_icon"/>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorFontColor2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textInputLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <AutoCompleteTextView
                        android:paddingTop="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:shadowColor="@color/colorFontColor"
                        android:textColorHint="@color/colorFontColor2"
                        android:textColor="@color/colorFontColor2"
                        android:textColorLink="@color/colorFontColor"
                        android:textColorHighlight="@color/colorFontColor2"
                        android:id="@+id/email"
                        android:textCursorDrawable="@drawable/access_cursor_active"
                        android:drawableBottom="@drawable/access_edittext_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="10dp"
                        android:hint="邮箱"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:layout_editor_absoluteY="153dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_vector_header_hollow_icon"/>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorFontColor2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textInputLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <AutoCompleteTextView

                        android:paddingTop="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:shadowColor="@color/colorFontColor"
                        android:textColorHint="@color/colorFontColor2"
                        android:textColor="@color/colorFontColor2"
                        android:textColorLink="@color/colorFontColor"
                        android:textColorHighlight="@color/colorFontColor2"
                        android:id="@+id/univiersity"
                        android:textCursorDrawable="@drawable/access_cursor_active"
                        android:drawableBottom="@drawable/access_edittext_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="10dp"
                        android:hint="大学"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:layout_editor_absoluteY="153dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="80dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    app:srcCompat="@drawable/ic_vector_addr_icon"/>
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/colorFontColor2"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/textInputLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <AutoCompleteTextView
                        android:paddingTop="10dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:shadowColor="@color/colorFontColor"
                        android:textColorHint="@color/colorFontColor2"
                        android:textColor="@color/colorFontColor2"
                        android:textColorLink="@color/colorFontColor"
                        android:textColorHighlight="@color/colorFontColor2"
                        android:id="@+id/college"
                        android:textCursorDrawable="@drawable/access_cursor_active"
                        android:drawableBottom="@drawable/access_edittext_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="10dp"
                        android:hint="院系"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:layout_editor_absoluteY="153dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
