<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:elevation="0dp"
        android:layout_width="35dp"
        android:src="@mipmap/zhiwu"
        android:layout_height="35dp"
        app:srcCompat="@drawable/ic_vector_search_new_relationship"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/appCompatImageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索:"
        android:id="@+id/person_username"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/appCompatImageView"
        android:layout_marginLeft="8dp" />


    <TextView

        android:id="@+id/short_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好，我是陈广平，交个朋友吧。"
        android:textSize="10dp"
        android:textColor="@color/colorFontColor"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/person_username"
        app:layout_constraintLeft_toRightOf="@+id/appCompatImageView"
        android:layout_marginLeft="8dp" />

    <ProgressBar
        android:padding="0px"
        android:visibility="gone"
        android:id="@+id/accept_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="60px"
        android:layout_height="63px"
        android:layout_marginRight="22dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp" />

        <Button
        android:id="@+id/accept_relation"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:background="@drawable/accept_relation_button"
        android:text="接受"
        android:textColor="@color/colorMain"
        android:textSize="14dp"
        android:visibility="visible"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />


    <TextView
        android:id="@+id/accept_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorMain"
        android:text="已接受"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.476"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toRightOf="@+id/accept_relation" />


</android.support.constraint.ConstraintLayout>






