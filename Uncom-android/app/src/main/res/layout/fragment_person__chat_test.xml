<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:fitsSystemWindows="true"
    tools:context="com.example.chen1.uncom.Person_Chat_Fragment">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appBarLayout">
            <android.support.v7.widget.Toolbar
                android:layout_marginTop="15dp"
                android:id="@+id/person_chat_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:id="@+id/person_chat_back_icon"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    tools:ignore="DuplicateIds"
                    app:srcCompat="@drawable/ic_vector_back_black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="陈广不平"
                    android:textSize="20dp"
                    android:layout_marginLeft="35dp"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_gravity="bottom"
            android:id="@+id/person_chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/appBarLayout"
            android:layout_above="@+id/person_chat_editText" />
         <EditText
                        android:layout_alignParentBottom="true"
                        android:id="@+id/person_chat_editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:theme="@style/ChatEditText" />



    </RelativeLayout>
</FrameLayout>
