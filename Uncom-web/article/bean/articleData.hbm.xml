<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
  PUBLIC "-//Hibernate?Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  <hibernate-mapping>
  <class name="bean.articleData" table="t_article">
      <id name="id" column="id">
        <generator class="uuid2"></generator>
      </id>
      
      <property name="articleContent" column="article_content"></property>
      <property name="articleCreateTime" column="article_create_time"></property>
      <property name="articleUpdateTime" column="article_update_time"></property>
      <property name="isDelete" column="is_delete"></property>
      <property name="isPublished" column="is_published"></property>
      <property name="articleAbstract" column="article_abstract"></property>
      <property name="articleName" column="article_name"></property>
      <property name="authorName" column="author_name"></property>
      <property name="authorId" column="author_id"></property>
      <property name="authorHeadPortraitUrl" column="author_head_portrait_url"></property>
      <property name="articlePictureUrl" column="article_picture_url"></property>
      <property name="likeCount" column="like_count"></property>
      <property name="readCount" column="read_count"></property>
      <property name="collectionTagId" column="collection_tag_id"></property>
      <property name="commentCount" column="comment_count"></property>
      <property name="noLikeCount" column="no_like_count"></property>
  </class>
  </hibernate-mapping>