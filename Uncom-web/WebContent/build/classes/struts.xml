<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">


<struts>
	<include file="struts-default.xml"></include>
	<!-- 指定默认编码集 -->
	
	<constant name="struts.ui.theme" value="simple"></constant>
	<constant name="struts.ui.templateDir" value="template"></constant>
	<constant name="struts.ui.templateSuffix" value="ftl"></constant>
	<!-- 每次当HTTP请求到达时 都重新加载文件 开发时打开 部署时关闭 -->
	<constant name="struts.i18n.reload" value="true" />  
	<constant name="struts.i18n.encoding" value="UTF-8"></constant>
    <!-- 指定需要Struts2处理的请求后缀 -->
	<constant name="struts.action.extension" value="do,action"/>
	<!-- 设置浏览器是否缓存静态内容 开发阶段应关闭 生产阶段应打开 默认为打开 -->
	
	<constant name="struts.serve.static.browserCache" value="false"></constant>
	<!-- 当Struts配置文件修改后，系统是否自动重新加载该文件 默认为false 开发阶段应打开 -->
	<constant name="struts.configuration.xml.reload" value="true"></constant>
	<!-- 开发模式下使用。可以打印出更详细的错误信息-->
	<constant name="struts.devMode" value="false"></constant>
	<!-- 是否开启动态方法调用 -->
	<constant name="struts.enable.DynamicMethodInvocation" value="false"/>
	
	<!-- 添加包 -->

	 <package name="user" namespace="/" extends="struts-default">
	 <global-allowed-methods>regex:.*</global-allowed-methods>  
	
		<action name="login_*" class="login.loginAction" method="{1}">
		      <result name="login_Page">/common/login_{1}.jsp</result>
		      <result name="login_Page_error">/common/login_{1}_Error.jsp</result>
		</action>
		
		<action name="register_*" class="register.registerAction" method="{1}">
		      <result name="register_Page">/common/register_Page.jsp</result>
		      <result name="register_Page_Success">/common/register_Page_Success.jsp</result>
		      <result name="register_Page_Error">/common/register_Page_Error.jsp</result>
		      <interceptor-ref name="modelDriven"></interceptor-ref>
		      <interceptor-ref name="defaultStack"></interceptor-ref>
		</action>
	</package> 
	
	<package name="articleTake" namespace="/article" extends="struts-default">
	
	 <global-allowed-methods>regex:.*</global-allowed-methods>
	 <action name="*" class="Load.loadAction" method="Page">
	            <result name="article_Page">/article/article.jsp</result>
	 </action>  
	</package>
	 
		
</struts>