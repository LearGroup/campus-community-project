    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/nearby_button"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_vector_nearby_2_icon"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近活动"
                android:textSize="18dp"
                android:textColor="@color/colorFontColor"
                app:layout_constraintLeft_toRightOf="@+id/appCompatImageView"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                 />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/relation_dynamics"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_vector_relationdynamic_icon"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关系动态"
                android:textSize="18dp"
                android:textColor="@color/colorFontColor"
                app:layout_constraintLeft_toRightOf="@+id/appCompatImageView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView

                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:id="@+id/dynamics_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/shape_circular_view"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"
                    android:id="@+id/dynamics_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="6dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/shape_circular_view"
                    />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffeeeeee"

            />
        <LinearLayout
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="26dp"
                app:srcCompat="@drawable/ic_vector_qrcode_icon"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textSize="18dp"
                android:textColor="@color/colorFontColor"
                android:layout_marginStart="15dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffeeeeee"

            />
        <LinearLayout
            android:id="@+id/have_a_look"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatImageView
            android:layout_gravity="center_vertical"
            android:layout_width="32dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_vector_look_2_icon"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看一看"
            android:textSize="18dp"
            android:textColor="@color/colorFontColor"
            app:layout_constraintLeft_toRightOf="@+id/appCompatImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/thinker_btn"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_vector_thinker_icon"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随笔"
                android:textSize="18dp"
                android:textColor="@color/colorFontColor"
                app:layout_constraintLeft_toRightOf="@+id/appCompatImageView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ffeeeeee"

            />
    </LinearLayout>
</LinearLayout>
